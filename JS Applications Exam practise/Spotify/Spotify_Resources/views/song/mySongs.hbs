{{> header}}
<section id="mySongsView">
  <div class="background-spotify">
    <div class="song-container">
      <h1>My Songs</h1>
      {{#each songs}}
      <div class="song">
        <h5>{{title}}</h5>
        <h5>{{artist}}</h5>
        <img class="cover" src="{{imageURL}}" />
        <p>Likes: {{likes}}; Listened {{listen}} times</p>
        <a href="/delete/{{id}}"><button type="button" class="btn btn-danger mt-4">Remove</button></a>
        <a href="/listen/{{id}}"><button type="button" class="btn btn-success mt-4">Listen</button></a>
      </div>
      {{/each}}
    </div>
</section>
{{> footer}}